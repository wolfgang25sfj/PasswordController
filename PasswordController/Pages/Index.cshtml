@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Password Controller</h1>
    <p>Secure your account with strong passwords and PINs.</p>

    @if (!Model.IsAccountSetUp)
    {
        <a asp-page="/Setup" class="btn btn-primary">Set Up Account</a>
    }
    else
    {
        <a asp-page="/Login" class="btn btn-success">Login</a>
        <a asp-page="/Reset" class="btn btn-warning">Reset Account</a>
    }
</div>