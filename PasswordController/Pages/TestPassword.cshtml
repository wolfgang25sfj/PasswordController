@model TestPasswordModel
@{
    ViewData["Title"] = "Password Strength Test";
}

<h2>Test Password Strength</h2>

<form method="post" onsubmit="return validateInput()">
    <div class="form-group">
        <label for="TestPassword">Enter a password to test:</label>
        <input type="password" id="TestPassword" name="TestPassword" class="form-control" value="@Model.TestPassword" required minlength="1" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Test Strength</button>
        <button type="button" id="generateBtn" class="btn btn-success">Generate Strong Password</button>
    </div>
</form>

@if (Model.TestMessages.Any())
{
    <div class="alert @(Model.IsValid ? "alert-success" : "alert-danger") mt-2">
        <h5>Strength: @Model.Strength</h5>
        @if (Model.IsValid)
        {
            <p>Password is secure!</p>
        }
        else
        {
            <ul class="mb-0">
                @foreach (var msg in Model.TestMessages)
                {
                    <li>@msg</li>
                }
            </ul>
        }
    </div>
}

<div id="genResult" class="alert alert-info mt-3" style="display:none;">
    <strong>Generated Password:</strong> <span id="genPass"></span>
    <button type="button" class="btn btn-sm btn-outline-secondary ml-2" onclick="copyToClipboard()">Copy</button>
    <p>Click "Test Strength" to check its rating!</p>
</div>

<script>
    function validateInput() {
        var pw = document.getElementById('TestPassword').value;
        if (!pw || pw.trim() === '') {
            alert('Password cannot be empty—enter something to test.');
            return false;
        }
        console.log('Form submitted with password length:', pw.length);
        return true;
    }

    document.getElementById('generateBtn').addEventListener('click', function() {
        console.log('Generate button clicked');
        // Use POST for handler
        fetch('/TestPassword?handler=Generate', {method: 'POST'})
            .then(response => {
                console.log('Fetch response status:', response.status);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.text();
            })
            .then(data => {
                console.log('Generated data:', data);
                document.getElementById('TestPassword').value = data;
                document.getElementById('genPass').textContent = data;
                document.getElementById('genResult').style.display = 'block';
            })
            .catch(err => {
                console.error('Generate failed:', err);
                alert('Generate failed: ' + err.message + '. Check console for details.');
            });
    });

    function copyToClipboard() {
        navigator.clipboard.writeText(document.getElementById('genPass').textContent).then(() => {
            alert('Copied to clipboard!');
        });
    }
</script>

<div class="mt-3">
    <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
